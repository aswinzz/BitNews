</head>
<body>

<div class="xv-overFlow">
<!--========================================
Body Content
===========================================-->

<header class="style1 docHeader">  
  <nav id="sticktop" class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header clearfix">
        <a class="navbar-brand" href="index.html"><img src="assets/img/logo2.png" alt="/"></a>
      </div>
      <div class="social-wrap">
        <ul class="social-list">
            <li><a href="index.html#" class="icon-twitter"></a></li>
            <li><a href="index.html#" class="icon-facebook"></a></li>
            <li><a href="index.html#" class="icon-tumblr"></a></li>
            <li><a href="index.html#" class="icon-google-plus"></a></li>
            <li><a href="index.html#" class="icon-pinterest"></a></li>
        </ul>
      </div>  
      <div id="dl-menu" class="xv-menuwrapper responsive-menu">
          <button class="dl-trigger">Open Menu</button>
          
          <ul class="dl-menu clearfix">
              <li class="active"><a href="/">Home</a></li>
              <li><a href="/tech">Tech</a></li>
              <li><a href="/finance">Finance</a></li>
              <li><a href="/gadget">Gadgets</a></li>
              <li><a href="/music">Music</a></li>
              <li><a href="/science">Science</a></li>
              <li><a href="/games">Games</a></li>
              <li><a href="/sports">Sports</a></li>
              <li><a href="/education">Education</a></li>
          </ul>
      </div><!-- /dl-menuwrapper/xv-menuwrapper  -->
    </div>
  </nav>
        
</header>

<!--========================================================
After header/ Search area 
========================================================-->
<div class="after-header">
    <div class="container">
    </div>
</div>

<!--=================================
Slider Area
=================================-->
<section class="xv-owl-slider default">
    <div class="container">
        <div class="xv-owl-wrap">
        <% for(var b=0;b<slider.length;b++){ %>
            <figure>
                <img src="<%= slider[b].urlToImage %>" alt="" width="1200" height="570"/>
                <figcaption><h1><a href="<%= slider[b].url %>"><%= slider[b].title %></a></h1>
                <span class="cat"></span></figcaption>
            </figure>
            <% } %>
           
        </div>    
    </div>    
</section>
<!--=================================
Page
=================================-->
<div class="mainWrapper">
    <div class="container">
       <div class="pageContentArea clearfix">
        
            <main>
                <h5 class="mb-20">Recent Hot News..</h5>
                 <% for(var i=0;i<article.length;i++){ %>
                <article>
                    <figure class="multiImages">
                    <% if(article[i].urlToImage){ %>
                        <img src="<%= article[i].urlToImage %>" width="1200" height="570" alt=""/>
                        <% }else{ %>
                        <img src="assets/demo-data/img2.jpg" width="1200" height="570" alt=""/>
                        <% } %>
                    </figure>
                   
                    <header>
                        <h1><a href="<%= article[i].url %>"><%= article[i].title %></a></h1>
                        <time datetime="<%= article[i].publishedAt %>"><%= article[i].publishedAt %></time>
                    </header>
                    <p><%= article[i].description %></p>
                    
                    <div class="specialContent">
                            <div class="shareWrapper">
                                <ul class="social-list">
                                    <li><a target="_blank" class="icon-twitter twitter-bg btn-twitter" href="https://twitter.com/intent/tweet?url=YOUR-URL"></a>
                                    </li>
                                    <li><a target="_blank" class="icon-facebook facebook-bg" href="http://www.facebook.com/sharer/sharer.php?u=YOUR-URL"></a></li>
                                    <li><a target="_blank" class="icon-google-plus gplus-bg" href="https://plus.google.com/share?url=YOUR-URL"></a></li>
                                </ul>
                                <button><i class="icon-next-1-f"></i></button>
                            </div>
                            <a class="cat-tag" href="<%= article[i].url %>">Read More</a>
                        </div>
                </article>
                <% } %>

                
                
            </main><!--main content of current page-->
        
            <aside class="sidebar">
                <header>
                    <h3></h3>                
                    <time datetime="2015-03-02">What's New</time> 
                </header>
                <div class="widget widget_timeline">
                    <div class="timeline-wrap">
                    <% for(var k=0;k<top.length;k++){ %>
                        <article>
                            <figure>
                                <img src="<%= top[k].urlToImage %>" width="1200" height="570" alt=""/>
                            </figure>
                            <header>
                                <h3><a href="<%= top[k].url %>"><%= top[k].title %></a></h3>
                                <time datetime="2015-01-31 08:30:45.687"><%= top[k].publishedAt %></time>
                            </header>
                            <p><%= top[k].description %></p>
                        </article>
                    <% } %>
                        <a href="index.html#" class="loadTimeline">Visit timeline</a>
                    </div><!--timeline-wrap-->
                </div>
            </aside><!--sidebar-->
        
        </div><!--pageContentArea-->
    </div>   
</div>
<div class="container">   
    <!--=================================
    Most visitied
    =================================-->
    <section class="most_visited">
        <header><h2>Most viewed</h2></header>
        <div class="row">
        
            <% for(var b=2;b<5;b++){ %>
            
            <div class="col-xs-12 col-sm-4">
                <article>
                    <figure>
                        <img src="<%= slider[b].urlToImage %>" width="1200" height="570" alt=""/>
                     </figure>
                    <header>
                        <h3><a href="<%= slider[b].url %>"><%= slider[b].title %> </a></h3>
                        <time datetime="2015-01-26 08:30:45.687"><%= slider[b].publishedAt  %></time>
                    </header>
                    <div class="article_content" style="height:10%;">
                        <%= slider[b].description %>
                    </div>
                    <footer>
                        <a href="<%= slider[b].url %>" class="readMore">read</a>
                    </footer>
                </article>
            </div><!--column-->
            <% } %>
            
            
        </div><!--row-->
        <footer>
        </footer>
    </section>
    
</div><!--container-->
<!--=================================
footer
=================================-->
<footer>
    <div class="container">
        <div class="footer_inner">
                        
            <div class="widget widget_newsletter">
                <form class="form_newsletter">
                    <label for="subEmail"><i class="icon-mail2"></i> get our last articles</label>
                    <input id="subEmail" type="email" required="required"/>
                    <button>subscribe</button>
                </form>
            </div>
            <div class="copyrights">
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <ul class="social-list">
                            <li><a href="index.html#" class="icon-twitter"></a></li>
                            <li><a href="index.html#" class="icon-facebook"></a></li>
                            <li><a href="index.html#" class="icon-tumblr"></a></li>
                            <li><a href="index.html#" class="icon-google-plus"></a></li>
                            <li><a href="index.html#" class="icon-pinterest"></a></li>
                        </ul>  
                    </div><!--column-->
                    <div class="col-xs-12 col-md-6">
                        <div class="rights">&copy; 2017 BitNews - All right reserved.</div>
                    </div>
                </div>
            </div><!--copyrights-->    
            
        </div>
    </div>
</footer>

</div>
